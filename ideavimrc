let mapleader = ","
let g:mapleader = ","

set showcmd
set showmode
set incsearch
set hlsearch
set ignorecase smartcase
set history=1000
set matchpairs
set timeoutlen=1000
set visualbell
set scrolloff=7

set surround

nmap <leader>w :w!<cr>
nmap <leader>q :q<cr>
nmap <leader>Q :q!<cr>

map <silent> <leader><cr> :noh<cr>

" smart switch between windows or tabs
nnoremap <silent> <c-h> gT
nnoremap <silent> <c-l> gt

" Remap VIM 0 to first non-blank character
map 0 ^

" not set register with x and s
nnoremap x "zx
nnoremap s "zs

