{
  "permissions": {
    "allow": [
      "WebFetch",
      "Read",
      "Glob",
      "Grep",
      "Task",
      "WebSearch",
      "Write(./src/**)",
      "Edit(./src/**)",
      "Write(./tests/**)",
      "Edit(./tests/**)",
      "Write(./docs/**)",
      "Edit(./docs/**)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(tail:*)",
      "Bash(ps:*)",
      "Bash(npm run:*)",
      "Bash(pnpm run:*)",
      "Bash(yarn:*)",
      "Bash(mvn:*)",
      "Bash(gradle:*)",
      "Bash(python:*)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash(which *)",
      "Bash(man *)",
      "Bash(pwd)",
      "Bash(env)",
      "Bash(echo *)",
      "Bash(sort *)",
      "Bash(uniq *)",
      "Bash(diff *)",
      "Bash(file *)",
      "Bash(git status*)",
      "Bash(git log*)",
      "Bash(git diff*)",
      "Bash(git show*)",
      "Bash(git branch*)",
      "Bash(git remote -v*)",
      "Bash(git -C * status*)",
      "Bash(git -C * log*)",
      "Bash(git -C * diff*)",
      "Bash(git -C * show*)",
      "Bash(git -C * branch*)",
      "Bash(git -C * remote -v*)",
      "Bash(gh pr view*)",
      "Bash(gh pr list*)",
      "Bash(gh pr status*)",
      "Bash(gh pr checks*)",
      "Bash(gh pr diff*)",
      "Bash(gh issue view*)",
      "Bash(gh issue list*)",
      "Bash(gh issue status*)",
      "Bash(gh repo view*)",
      "Bash(gh repo list*)",
      "Bash(gh run view*)",
      "Bash(gh run list*)",
      "Bash(gh release view*)",
      "Bash(gh release list*)",
      "Bash(gh api *)"
    ],
    "deny": [
      "Read(./prod-secrets/**)",
      "Read(./.env.prod*)",
      "Read(./**/*secret*)",
      "Read(./**/*token*)",
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Bash(git push --force:*)",
      "Bash(git push --force-with-lease:*)"
    ],
    "ask": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(npm publish:*)",
      "Bash(pnpm publish:*)",
      "Bash(kubectl apply:*)",
      "Bash(kubectl delete:*)"
    ],
    "defaultMode": "plan"
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline-command.sh"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt|idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "INPUT=$(cat); MSG=$(echo \"$INPUT\" | jq -r '.message // \"Needs attention\"'); TITLE=$(echo \"$INPUT\" | jq -r '(.title // \"Claude Code\") + \" [\" + (.cwd // \"\" | split(\"/\") | last) + \"]\"'); ~/dotfiles/bin/notify -t \"$TITLE\" \"$MSG\""
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "Notion@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true,
    "obsidian@obsidian-skills": true,
    "superpowers@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true
}
}
